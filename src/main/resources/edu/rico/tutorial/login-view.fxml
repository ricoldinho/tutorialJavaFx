<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.rico.tutorial.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Inicio de Sesión">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>
    <Label text="Usuario:"/>
    <TextField fx:id="usernameField"/>

    <Label text="Contraseña:"/>
    <PasswordField fx:id="passwordField"/>

    <Button fx:id="loginButton" onAction="#onLoginButtonClick" text="Entrar"/>
</VBox>